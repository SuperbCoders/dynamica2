= render 'popups/auth_shops'
%section.case.case-projects-empty(ng-show='vm.projects.length == 0')
  .case-cnt.text-center
    .title
      Hello, {{user.display_name}}!
      %br>/
      You haven’t any project yet.
    %div
      %a.btn.btn-lg.btn-danger(href = '' ng-click="vm.modal('auth_shops','show')")= t('projects.start_ﬁrst_project')

.section.case.case-projects(ng-show='vm.projects.length > 0 && vm.projects[0].id != null')
  .case-cnt
    .items
      .row
        .col-sm-6(ng-repeat = "project in vm.projects")
          .graph-unit
            %a.graph-u-link(href = '' ui-sref = "projects.view({slug: project.slug, id: project.id })")
            %h5.graph-name_v2 {{ project.name }} # {{ project.id }}
            %a.graph-settings(ui-sref = "projects.settings({slug: project.slug})")= t('projects.list.project_settings')
            .graph-block
              .graph_2.areaChart_2.d3graph.hide_x_axis
        .col-lg-3.col-md-4.col-sm-6
          %a.graph-new-link(href = '' ng-click="vm.modal('auth_shops','show')")
            %span= t('projects.list.add_new')

