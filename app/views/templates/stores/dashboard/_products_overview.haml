        %h5.graph-name= t('projects.show.percentage_of_inventory_sold')
        .graph-value
          -#%span.val 3.2
          -#%sup.graph-dynamica.dynamica_up +8%
        .graph-block
          #percentage_of_inventory_sold.graph_1.donutChart_1.d3graph.hide_x_axis

    .col-lg-3.col-md-4.col-sm-6
      .graph-unit
        %a.graph-u-link{:href => "", 'ui-sref' => "projects.products_revenue({from: vm.range.from, to: vm.range.to, project: vm.project, slug: vm.project.slug})"}
        %h5.graph-name= t('projects.show.percentage_of_stock_sold')
        %table.best_sellers
          %tr(ng-repeat="p in vm.top_5_products")
            %td.col_1
              .seller_name {{ p.title }}
            %td.col_2 {{ p.sales }}
            %td.col_3
              .seller_val.best_seller {{ p.revenue | dynCurrency }}
