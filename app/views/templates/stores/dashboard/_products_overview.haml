.dashboard-caption
  %h3.caption-text= t 'projects.show.inventory'
  %i.icon.fa.fa-angle-right
.graph-unit-holder.graph-unit-hover
  .row

    / Товаров продано | Items Sold – линейная диаграмма
    .col-lg-3.col-md-4.col-sm-6
      .graph-unit
        %a.graph-u-link{:href => "", 'ui-sref' => "projects.chart({from: vm.range.from, to: vm.range.to, project: vm.project, slug: vm.project.slug, chart: 'products_number'})"}
        %h5.graph-name= t('projects.show.products_number')
        .graph-value
          %span.val {{ vm.other_chars_data.products_number.value}}
          %sup.graph-dynamica{'ng-class' => "{dynamica_up: vm.parse_diff(vm.other_charts_data.products_number.diff) > 0, dynamica_down: vm.parse_diff(vm.other_charts_data.products_number.diff) < 0}"} {{vm.other_charts_data.products_number.diff}}
        .graph-block
          #products_number.graph_2.lineAreaChart_1.d3graph.hide_x_axis

    / Число позиций в продаже | Number of Products in Stock
    / – линейная диаграмма
    / – число товаров, у которых >=1 единицы в наличии на складе
    .col-lg-3.col-md-4.col-sm-6
      .graph-unit
        %a.graph-u-link{:href => "", 'ui-sref' => "projects.chart({from: vm.range.from, to: vm.range.to, project: vm.project, slug: vm.project.slug, chart: 'products_in_stock_number'})"}
        %h5.graph-name= t('projects.show.products_in_stock_number')
        .graph-value
          %span.val {{ vm.other_chars_data.products_in_stock_number.value}}
          %sup.graph-dynamica{'ng-class' => "{dynamica_up: vm.parse_diff(vm.other_charts_data.products_in_stock_number.diff) > 0, dynamica_down: vm.parse_diff(vm.other_charts_data.products_in_stock_number.diff) < 0}"} {{vm.other_charts_data.products_in_stock_number.diff}}
        .graph-block
          #products_in_stock_number.graph_2.lineAreaChart_1.d3graph.hide_x_axis

    / Число товаров в продаже | Items in Stock
    / – линейная диаграмма
    / – сумма единиц всех продуктов на складе
    .col-lg-3.col-md-4.col-sm-6
      .graph-unit
        %a.graph-u-link{:href => "", 'ui-sref' => "projects.chart({from: vm.range.from, to: vm.range.to, project: vm.project, slug: vm.project.slug, chart: 'items_in_stock_number'})"}
        %h5.graph-name= t('projects.show.items_in_stock_number')
        .graph-value
          %span.val {{ vm.other_chars_data.items_in_stock_number.value}}
          %sup.graph-dynamica{'ng-class' => "{dynamica_up: vm.parse_diff(vm.other_charts_data.items_in_stock_number.diff) > 0, dynamica_down: vm.parse_diff(vm.other_charts_data.items_in_stock_number.diff) < 0}"} {{vm.other_charts_data.items_in_stock_number.diff}}
        .graph-block
          #items_in_stock_number.graph_2.lineAreaChart_1.d3graph.hide_x_axis

    / Какой % товаров продается | Share of Inventory Sold
    / – круговая диаграмма
    / – доля тех продуктов, у которых были продажи
    / – на отдельной странице график выглядит вот так http://dl.dropbox.com/u/4476496/Screenshots/0r7.png
    .col-lg-3.col-md-4.col-sm-6
      .graph-unit
        %a.graph-u-link(href = "" ui-sref = "projects.chart({from: vm.range.from, to: vm.range.to, project: vm.project, slug: vm.project.slug, chart: 'percentage_of_inventory_sold'})")
        %h5.graph-name= t('projects.show.percentage_of_inventory_sold')
        .graph-value
          -#%span.val 3.2
          -#%sup.graph-dynamica.dynamica_up +8%
        .graph-block
          #percentage_of_inventory_sold.graph_1.donutChart_1.d3graph.hide_x_axis

