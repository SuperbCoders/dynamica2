%section
  .case-capt
    %h1= t('setup.title')
  .case-cnt
    %form.form-horizontal
      .form-group
        .col-md-6.col-sm-9
          .control-box
            %input.form-control{type: "email", 'ng-model' => "vm.profile.email", placeholder: t('setup.profile.email')}(required)
          .control-box
            %input.form-control{type: "password", 'ng-model' => "vm.profile.password", placeholder: t('setup.profile.password')}
          .control-box
            %input.form-control{type: "password", 'ng-model' => "vm.profile.password_confirmation", placeholder: t('setup.profile.password_confirmation')}

      .form-group
        .col-md-offset-3.col-md-6.col-sm-offset-3.col-sm-9
          %a.btn.btn-lg.btn-danger{'ng-click' => "vm.save()"}= t('setup.save')

      .form-group
        .col-md-offset-3.col-md-6.col-sm-offset-3.col-sm-9
          %a.btn.btn-lg.btn-danger{href: user_omniauth_authorize_url(:facebook)}= t('setup.by_facebook')

      .form-group
        .col-md-offset-3.col-md-6.col-sm-offset-3.col-sm-9
          %a.btn.btn-lg.btn-danger{href: user_omniauth_authorize_url(:google_oauth2)}= t('setup.by_google')
